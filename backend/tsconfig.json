{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@dan/shared": ["../shared/dist"],
      "@dan/shared/*": ["../shared/dist/*"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}

